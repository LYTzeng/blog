.bio
  text-align center 
  margin-top 20px
  padding-bottom 10px
  margin-bottom 0
  display: flex
  flex-direction:column
  .img-holder
    position: relative;
    width:120px;
    height:120px;
    -webkit-clip-path: circle(50% at 50% 50%);
    clip-path: circle(50% at 50% 50%);
    margin  0 auto
    img
      position: relative;
      left: 50%;
      top: 50%;
      transform: translate(-50%, -50%);
      width:auto;
      height:100%;
  .name
    font-family 'Noto Sans TC Regular'
    font-size 20px
    margin 5px 0
  .short-aboutme > p
    margin 5px 0
  div > span
    padding: 0 2.5px;

.bio-sidebar
  width 90%
  padding 0 5%
