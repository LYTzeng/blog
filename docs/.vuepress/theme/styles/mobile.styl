@require './config'

$mobileSidebarWidth = $sidebarWidth * 0.7
$MQNarrow = 1000px

// narrow desktop / iPad
@media (max-width: $MQNarrow)
  .sidebar
    font-size 15px
    width $mobileSidebarWidth
    transform 'translate( -%s ,0)' % $mobileSidebarWidth
  .page
    padding-right $mobileSidebarWidth
    max-width 80%

// wide mobile
@media (max-width: $MQMobile)
  body
    font-size 14px
  .sidebar
    top 0
    padding-top $navbarHeight
    transform translateX(-100%)
    transition transform .2s ease
    left 0px
    transition: all 0.2s cubic-bezier(0.25,0.1,0.25,1);
  .page
    padding-right 0
    padding-left 0
    width 100vw
    max-width 100%
  .theme-container
    &.sidebar-open
      .sidebar
        transform translateX(0)
        box-shadow 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19)
    &.no-navbar
      .sidebar
        padding-top: 0
  .theme-default-content:not(.custom)
    padding 0 20px

// narrow mobile
@media (max-width: $MQMobileNarrow)
  h1
    font-size 1.9rem
  {$contentClass}
    div[class*="language-"]
      margin 0.85rem 0
      border-radius 0
      pre[class*="language-"]
        padding 1.25rem 1rem
